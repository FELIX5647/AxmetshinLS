<Window x:Class="AxmetshinLS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxmetshinLS"
        mc:Ignorable="d"
        Title="AxmetshinLanguage" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="res/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Frame Grid.Row="0" Background="#FFE7FABF"></Frame>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
        <Frame Grid.Row="2" Background="#FFE7FABF"></Frame>

        <Image Grid.Row="0" Source="res/school_logo.png" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
        <TextBlock Text="Языковая школа" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"></TextBlock>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="BtnBack" Content="Назад" Click="BtnBack_Click"></Button>
    </Grid>
</Window>
